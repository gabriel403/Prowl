<br>
<button type="button" id="newDeploy" class="btn btn-info">Deploy</button>
<p></p>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Deploy Status</th>
      <th>Deploy Date</th>
    </tr>
  </thead>
  <tbody>
    <%= render @environment.deploys.limit(5).order("created_at DESC") %>
  </tbody>
</table>

<h3>Deploy Steps</h3>

<%= link_to 'New Deploy Step', new_deploy_step_path(:appid => @environment.app.id), :class => "btn btn-info", :id => 'newDeployStep' %>

<div id="deployStepsList">
  <% order_num = -1
  @environment.deploy_steps.each do |deploy_step|
    if order_num != deploy_step.order
      strcontent = (0 != deploy_step.order) ? "Step ##{deploy_step.order}" : "Generic Attribute" %>
        <div class="row">
          <div class="col-md-6">
            <div class="panel">
              <h4><%= strcontent %></h4>
            </div>
          </div>
          <div class="col-md-6">&nbsp;</div>
        </div>
      <% order_num = deploy_step.order
    end %>
    <%= render deploy_step %>
  <% end %>
</div>