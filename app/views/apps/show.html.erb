<% title "Show App" %>
<div class="page-header">
  <h1>App <small><%= @app.name.titleize %></small>
    <div class="btn-group">
      <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
        Action <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'Edit App', edit_app_path(@app) %></li>
        <li><%= link_to 'Delete App', app_path(@app), :method => 'delete', data: { confirm: 'Are you sure?' } %></li>
      </ul>
    </div>

    <div class="btn-group">
      <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
        Deploys <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'List', deploys_path(@app) %></li>
        <li><%= link_to 'Deploy', new_deploy_path(@app) %></li>
      </ul>
    </div>

    <div class="btn-group">
      <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
        Servers <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'List', servers_path %></li>
        <li><%= link_to 'New', new_server_path %></li>
        <li><%= link_to 'Add A Deploy Target', app_servers_path(@app,'app') %></li>
      </ul>
    </div>
  </h1>
</div>

<%= render @app %>


<button type="button" class="btn btn-default" data-toggle="modal" data-target="#newDeployStepModal" data-keyboard="true">New Deploy Step</button>
<p></p>
<div class="modal fade" id="newDeployStepModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Modal title</h4>
      </div>
      <div class="modal-body">
        <div id="flash_message"></div>
        <% @deploy_step = DeployStep.new 
          @url = deploy_steps_path(@deploy_step, :appid => @app.id)
        %>
        <%= render 'deploy_steps/form' %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->