<% title "Show App" %>
<div class="page-header">
  <h1>App <small><%= @app.name.titleize %></small>
    <div class="btn-group">
      <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
        Action <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'Edit App', edit_app_path(@app) %></li>
        <li><%= link_to 'Delete App', app_path(@app), :method => 'delete', data: { confirm: 'Are you sure?' } %></li>
      </ul>
    </div>

    <div class="btn-group">
      <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
        Deploys <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'List', deploys_path(@app) %></li>
        <li><%= link_to 'Deploy', new_deploy_path(@app) %></li>
      </ul>
    </div>

    <div class="btn-group">
      <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
        Environments <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'List', environments_path %></li>
        <li><a href='#' data-toggle="modal" data-target="#newEnvironmentModal" data-keyboard="true">New</a></li>
      </ul>
    </div>
  </h1>
</div>

<%= render @app %>

<div class="modal fade" id="newEnvironmentModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Modal title</h4>
      </div>
      <div class="modal-body">
        <div id="flash_message"></div>
        <% @environment = Environment.new %>
        <% @url         = environments_path(@environment, :appid => @app.id) %>
        <%= render 'environments/form' %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->