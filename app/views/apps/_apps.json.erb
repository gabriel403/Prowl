<div class="row">
  <div class="col-md-4"><%= link_to app.name, app_path(app) %></div>
  <div class="col-md-5"><%= app.description %></div>
  <div class="col-md-3">
    <div class="btn-group">
      <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
        Action <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'Edit', edit_app_path(app) %></li>
        <li><%= link_to 'Delete', app_path(app), :method => 'delete', data: { confirm: 'Are you sure?'} %></li>
      </ul>
    </div>
  </div>
</div>
