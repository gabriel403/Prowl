<% title "Show Server" %>
<div class="page-header">
  <h1>Server <small><%= @server.name.titleize %></small>
    <div class="btn-group">
      <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
        Action <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'Edit', edit_server_path(@server) %></li>
        <li><%= link_to 'Delete', server_path(@server), :method => 'delete', data: { confirm: 'Are you sure?'} %></li>
      </ul>
    </div>

    <div class="btn-group">
      <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
        Apps <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'Add Server To App', app_servers_path(@server,'server') %></li>
      </ul>
    </div>
  </h1>
</div>

<div class="row">
  <div class="col-md-4"><strong>Name:</strong></div>
  <div class="col-md-8"><%= @server.name.titleize %></div>
</div>
<div class="row">
  <div class="col-md-4"><strong>Host:</strong></div>
  <div class="col-md-8"><%= @server.host %></div>
</div>
<div class="row">
  <div class="col-md-4"><strong>Username:</strong></div>
  <div class="col-md-8"><%= @server.username %></div>
</div>
<div class="row">
  <div class="col-md-4"><strong>Authentication Type:</strong></div>
  <div class="col-md-8"><%= @server.authentication_type.name %></div>
</div>
