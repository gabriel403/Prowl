<div class="well well-sm">
  <div class="col-md-3"><%= deploy_step.deploy_step_type_option.deploy_step_type.name.titleize %></div>
  <div class="col-md-7"><%= deploy_step.value.length == 0 ? deploy_step.deploy_step_type_option.name : deploy_step.value %></div>
  <div class="col-md-2">
    <div class="btn-group">
      <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
        Action <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'Edit', edit_deploy_step_path(deploy_step) %></li>
        <li><%= link_to 'Delete', deploy_step_path(deploy_step), :method => 'delete', data: { confirm: 'Are you sure?'} %></li>
      </ul>
    </div>
  </div>
  <br>
  <% if deploy_step.additional.is_a?(Hash) %>
    <% deploy_step.additional.each do |key, value| %>
      <div class="col-md-8"></div>
      <div class="col-md-1"><%= key %></div>
      <div class="col-md-1"><%= truncate(value, :length => 40) %></div>
      <div class="col-md-2"></div>
      <br>
    <% end %>
  <% elsif deploy_step.additional.is_a?(Array) %>
    <% deploy_step.additional.each do |value| %>
      <div class="col-md-8"></div>
      <div class="col-md-2"><%= value %></div>
      <div class="col-md-2"></div>
      <br>
    <% end %>
  <% end %>
</div>